@page "/login"
@using Atadan.Data;
@inject NavigationManager navMng;

<div class="allinside" >
    <img src="./images/logo.png" alt="logo" width="100" height="100" class="imageclass1" />
    <div class="container" >
        <div class="insidecont">
            <h1>Hoşgeldiniz!!</h1>
            <h3>Giriş</h3>
            <i class="fas fa-user-circle" aria-hidden="true" style="font-size:40px; color:green; margin-left:145px;"></i>

            <div class="form-group">
                <input type="text" id="username" @bind-value="loginUser.UserName" name="username" placeholder="Kullanıcı adı:" required>
            </div>

            <div class="form-group">
                <input type="password" id="password" @bind-value="loginUser.Password" name="password" placeholder="Şifre:" required>
            </div>

            <button class="loginbutton" @onclick="LogIn">Giriş</button>
            <a style="justify-content:center; display:flex; align-items:center" href="register">Hesabınız yok mu?</a>
        </div>
    </div>
</div>

@code{
    public User loginUser = new User();

    private void LogIn() {
        //var locator = Geolocation.GetLocationAsync();

        if(loginUser.UserName == "user" && loginUser.Password == "pass") {
            navMng.NavigateTo("/home");
        }

    }

}